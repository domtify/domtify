{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "checkJs": false,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
