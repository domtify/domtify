{
  "name": "domtify",
  "version": "1.0.1",
  "description": "Lightweight DOM & event utility with a jQuery-style API.",
  "repository": "github:ajiho/domtify",
  "bugs": {
    "url": "https://github.com/ajiho/domtify/issues"
  },
  "author": "ajiho",
  "funding": "https://www.lujiahao.com/sponsor",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "style": "prettier --config configs/prettier.config.mjs . --check --cache --cache-location node_modules/.cache/.prettiercache",
    "style:fix": "prettier --config configs/prettier.config.mjs . --write",
    "lint": "eslint --config configs/eslint.config.mjs \"src/**/*.js\" --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "eslint --config configs/eslint.config.mjs \"src/**/*.js\"  --fix",
    "commitlint": "commitlint --config configs/commitlint.config.mjs -e -V",
    "sizelint": "size-limit --config configs/size-limit.mjs",
    "check": "run-s style lint",
    "fix": "run-s *:fix",
    "clean": "rimraf dist",
    "rollup": "rollup --config configs/rollup.config.mjs",
    "build": "run-s clean gen-exports rollup sizelint",
    "test": "vitest --config configs/vitest.config.mjs --coverage --ui",
    "coverage": "vitest --config configs/vitest.config.mjs run --coverage",
    "docs:dev": "vitepress dev docs --open",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "example": "browser-sync start --config configs/bs-config.cjs"
  },
  "main": "dist/esm/index.js",
  "module": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./utils": {
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "browser",
    "javascript",
    "jquery",
    "library"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-alias": "^6.0.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-multi-entry": "^7.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-strip": "^3.0.4",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "browser-sync": "^3.0.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.2",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "is-what": "^5.5.0",
    "jquery": "3.7.1",
    "medium-zoom": "^1.1.0",
    "npm-run-all2": "^8.0.4",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-sort-pkgjson": "^1.0.0",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-delete": "^3.0.1",
    "sass": "^1.95.1",
    "size-limit": "^12.0.0",
    "vitepress": "^1.6.4",
    "vitepress-plugin-group-icons": "^1.6.5",
    "vitepress-plugin-tabs": "^0.7.3",
    "vitest": "^4.0.16"
  }
}
