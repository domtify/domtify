{
  "name": "domtify",
  "version": "1.0.0",
  "description": "Lightweight DOM & event utility with a jQuery-style API.",
  "repository": "github:ajiho/domtify",
  "bugs": {
    "url": "https://github.com/ajiho/domtify/issues"
  },
  "author": "ajiho",
  "funding": "https://www.lujiahao.com/sponsor",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky || true",
    "style": "prettier --config configs/prettier.config.mjs . --check --cache --cache-location node_modules/.cache/.prettiercache",
    "style:fix": "prettier --config configs/prettier.config.mjs . --write",
    "lint": "eslint --config configs/eslint.config.mjs \"src/**/*.js\" --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "eslint --config configs/eslint.config.mjs \"src/**/*.js\"  --fix",
    "commitlint": "commitlint --config configs/commitlint.config.mjs -e -V",
    "sizelint": "size-limit --config configs/size-limit.mjs",
    "check": "run-s style lint",
    "fix": "run-s *:fix",
    "clean": "rimraf dist",
    "build:base": "tsdown --config configs/tsdown.config.mjs",
    "build:min": "cross-env NODE_ENV=production run-s build:base",
    "build": "run-s clean build:*",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.mjs",
    "test": "vitest --config configs/vitest.config.mjs --coverage --ui",
    "coverage": "vitest --config configs/vitest.config.mjs run --coverage",
    "docs:dev": "vitepress dev docs --open",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "bs": "browser-sync start --config configs/bs-config.cjs"
  },
  "main": "dist/domtify.js",
  "module": "dist/esm/index.mjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      }
    },
    "./methods/*": {
      "import": "./dist/esm/methods/*.mjs",
      "require": "./dist/cjs/methods/*.cjs"
    },
    "./utilities/*": {
      "import": "./dist/esm/utilities/*.mjs",
      "require": "./dist/cjs/utilities/*.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "browser",
    "javascript",
    "jquery",
    "library"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "browser-sync": "^3.0.4",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "is-what": "^5.5.0",
    "jquery": "3.7.1",
    "medium-zoom": "^1.1.0",
    "npm-run-all2": "^8.0.4",
    "picocolors": "^1.1.1",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "prettier-plugin-sort-pkgjson": "^1.0.0",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "semver": "^7.7.2",
    "size-limit": "^11.2.0",
    "tsdown": "^0.16.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-group-icons": "^1.6.3",
    "vitepress-plugin-tabs": "^0.7.3",
    "vitest": "^3.2.4"
  }
}
